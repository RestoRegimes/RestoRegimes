{% extends "FOSUserBundle::layout.html.twig" %}
{% block message %}
    <h5 class="mdl-cell--hide-phone">Connexion</h5>
{% endblock %}
{% trans_default_domain 'FOSUserBundle' %}
{% block loginLink %}
    <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" href="{{ path('fos_user_registration_register') }}">{{ 'Inscription'|trans({}, 'FOSUserBundle') }}</a>
{% endblock %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">


        <div class="mdl-grid">
            <div class="mdl-cell--8-col">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <input class="mdl-textfield__input" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Nom" />

                <input class="mdl-textfield__input" type="password" id="password" name="_password" required="required" placeholder="Mot de passe"/>

                <label class="mdl-checkbox mdl-js-checkbox " for="remember_me">
                    <input class="mdl-checkbox__input" type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <span class="mdl-checkbox__label"><b id="geo">Se souvenir de moi</b></span>
                </label>
            </div>
            <div class="mdl-layout-spacer"></div>
            <div class="mdl-cell--2-col mdl-cell--middle">
                <div>
                    <button class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored  mdl-color--green-A400">
                        <i class="material-icons">check</i>
                    </button>
                </div>
            </div>
        </div>

    </form>
{% endblock fos_user_content %}