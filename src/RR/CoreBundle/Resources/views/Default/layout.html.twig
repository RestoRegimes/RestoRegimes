{% block javascript %}

    <script src="{{ asset('bundles/rrcore/js/jquery.particleground.min.js') }}"></script>
<script>
    $(document).ready(function(){
        var header = $('body');
        var backgrounds = new Array(
                'url("{{ asset('bundles/rrcore/images/mapBgParis.png') }}") center / cover'
                ,'url("{{ asset('bundles/rrcore/images/ASSIETTE%202.jpg') }}") center / cover'
                , 'url("{{ asset('bundles/rrcore/images/ASSIETTE%204.jpg') }}") center / cover'
                , 'url("{{ asset('bundles/rrcore/images/assiette%206.jpg') }}") center / cover'
                , 'url("{{ asset('bundles/rrcore/images/assiette%208.jpg') }}") center / cover'
        );

        $(document).ready(function(){
            var current = Math.floor((Math.random() * backgrounds.length));;
            var tick=true;
            var colorP ='#00E676';
            switch(current){
                case 0:
                    colorP ='#00aa00';
                    break;
                case 1:
                    colorP ='#99ff55';
                    break;
                case 2:
                    colorP ='#3771c8';
                    break;
                case 3:
                    colorP ='#ffe500';
                    break;
                case 4:
                    colorP ='#d40000';
                    break;
            }
            header.css('background', backgrounds[current]);

            $('.particles').particleground({
                dotColor: colorP,
                lineColor: '#898989',
                particleRadius: 10,
                lineWidth: 2
            });

        })




    });
</script>
{% endblock %}