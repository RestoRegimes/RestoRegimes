{# src/OC/PlatformBundle/Resources/views/Advert/delete.html.twig #}

{% extends "RRRestaurantBundle::layout.html.twig" %}

{% block title %}
    Supprimer un restaurant - {{ parent() }}
{% endblock %}

{% block rrrestaurant_body %}

    <h2>Supprimer un restaurant</h2>

    <p>
        Etes-vous certain de vouloir supprimer le restaurant "{{ restaurant.nom }}" ?
    </p>

    {# On met l'id de l'annonce dans la route de l'action du formulaire #}
    <form action="{{ path('rr_restaurant_delete', {'id': restaurant.id}) }}" method="post">
        <a href="{{ path('rr_restaurant_view', {'id': restaurant.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour au restaurant
        </a>
        {# Ici j'ai écrit le bouton de soumission à la main #}
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        {# Ceci va générer le champ CSRF #}
        {{ form_rest(form) }}
    </form>

{% endblock %}